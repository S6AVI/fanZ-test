<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/currencyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main"
        android:drawableLeft="@drawable/currency"
        android:padding="16dp"
        android:text="1M"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fantazBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/purple2"
        android:drawableLeft="@drawable/fantaZ_points_active"
        android:padding="16dp"
        android:text="124"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/helpIconButton"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/helpIconButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/help"
        app:layout_constraintBottom_toBottomOf="@+id/fantazBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fantazBtn" />






</androidx.constraintlayout.widget.ConstraintLayout>